<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" group="content" method="upgrade">
	<name>plg_content_youtube</name>
	<author>HKweb</author>
	<creationDate>2024-04</creationDate>
	<copyright>(C) 2024 HKweb</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@hkweb.nl</authorEmail>
	<authorUrl>hkweb.nl</authorUrl>
	<version>0.3.0</version>
	<description>PLG_YOUTUBE_XML_DESCRIPTION</description>
	<namespace path="src">HKweb\Plugin\Content\YouTube</namespace>
	<files>
		<folder plugin="youtube">services</folder>
		<folder>src</folder>
		<folder>layouts</folder>
	</files>
	<media destination="plg_content_youtube" folder="media">
		<folder>css</folder>
		<folder>js</folder>
	</media>
	<languages>
		<language tag="en-GB">language/en-GB/plg_content_youtube.ini</language>
		<language tag="en-GB">language/en-GB/plg_content_youtube.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="wrapper_class"
					type="text"
					label="PLG_CONTENT_YOUTUBE_WRAPPERCLASS_LABEL"
					default=""
					filter="string"
				/>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" name="YouTube content plugin for Joomla">https://raw.githubusercontent.com/hans2103/plg_content_youtube/master/manifest.xml</server>
	</updateservers>
</extension>
