<updates>
    <update>
        <name>YouTube video embed for Joomla</name>
        <description>This is a Joomla! plugin which replace `{youtube url}` by the Youtube video. Initially only the YouTube image and a button. After pressing the button both elements are replaced by the YouTube embed iframe and the video starts.</description>
        <element>youtube</element>
        <type>plugin</type>
        <client>site</client>
        <folder>content</folder>
        <version>0.3.0</version>
        <infourl title="YouTube video embed for Joomla">https://github.com/hans2103/plg_content_youtube/releases/tag/0.3.0</infourl>
        <downloads>
            <downloadurl type="full" format="zip">https://github.com/hans2103/plg_content_youtube/releases/download/0.3.0/plg_content_youtube.zip</downloadurl>
        </downloads>
        <sha512>8dfc94c97f2243121364dd094cdc3e7ddee00cd41bcf65fcabde0f76cb5859f846b84f549919e3e34996e6b602f24db2d52800c1c08cd271cf05e435e6e31e6d</sha512>
        <tags>
            <tag>stable</tag>
        </tags>
        <targetplatform name="joomla" version="5.(0|1)" />
        <php_minimum>8.0.0</php_minimum>
    </update>
</updates>
